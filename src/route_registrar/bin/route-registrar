#!/usr/bin/env ruby
require "rubygems"
require "yaml"

$:.unshift(File.expand_path("../../lib", __FILE__))

require "route_registrar"
require "steno"
require "securerandom"

if ARGV.empty?
  puts "Usage: route-registrar PATH_TO_CONFIG_FILE"
  exit
end

config = YAML.load_file(ARGV[0])
route_registrar_port_map = YAML.load_file(ARGV[1])

Steno.init(Steno::Config.from_hash(config["logging"]))
logger = Steno.logger("route-registrar")
logger.debug("Config #{config.inspect}")

EM.run do
  route_registrar = RouteRegistrar.new(config, route_registrar_port_map)

  route_registrar.register_with_router

  %w[TERM INT QUIT].each do |signal|
    trap signal do
      logger.info("Shutting down")
      route_registrar.shutdown { exit }
    end
  end
end
